<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SuperMarketPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>supermarket.Pojos.Product</class>
    <class>supermarket.Pojos.Purchase</class>
    <class>supermarket.Pojos.Store</class>
    <class>supermarket.Pojos.ProductPurchase</class>
    <class>supermarket.Pojos.Customer</class>
    <class>supermarket.Pojos.CheckCard</class>
    <class>supermarket.Pojos.Bank</class>
    <class>supermarket.Pojos.CreditCard</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/SuperMarketDB"/>
      <property name="javax.persistence.jdbc.password" value="supermarketdb"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.user" value="supermarketdb"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="CREDIT_CARD_AUTH_DB" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>External_System.CreditCardAuthority</class>
    <class>External_System.ExternalBank</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://plh24.ecomet.eap.gr:8080/CREDIT_CARD_AUTH_DB"/>
      <property name="javax.persistence.jdbc.password" value="studentpass"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.user" value="student"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
